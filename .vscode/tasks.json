{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Poetry: test current module",
            "type": "shell",
            "command": "poetry run pytest ${fileDirnameBasename} --cov=${fileDirnameBasename} --cov-report term-missing",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}